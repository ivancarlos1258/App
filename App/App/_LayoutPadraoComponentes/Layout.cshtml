@model Microsoft.AspNetCore.Html.IHtmlContent

@* LIBS CSS *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" crossorigin="anonymous" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/v/dt/dt-2.2.1/datatables.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simple-notify@1.0.4/dist/simple-notify.css" />

@* ESTILOS *@
<link rel="stylesheet" href="~/_LayoutPadraoAssets/Css/Layout/main.css">
<link rel="stylesheet" href="~/_LayoutPadraoAssets/Css/Layout/layout.css">

@* ESTILOS DE COMPONENTES *@
<link rel="stylesheet" href="~/_LayoutPadraoAssets/Css/select.css">
<link rel="stylesheet" href="~/_LayoutPadraoAssets/Css/tabela.css">

@* JQUERY *@
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" crossorigin="anonymous" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" referrerpolicy="no-referrer"></script>

@* HTML LAYOUT *@
<div class="d-flex m-0 overflow-hidden p-0 vw-100">
    @await Html.PartialAsync("Componentes/Layout/Sidebar.cshtml")

    <div class="flex-grow-1">
        @await Html.PartialAsync("Componentes/Layout/Header.cshtml")

        <main>
            <h5 class="my-4">@ViewData["Title"]</h5>

            @Model

            @await Html.PartialAsync("Componentes/Layout/Footer.cshtml")
        </main>
    </div>
</div>

@* COMPONENTES FIXOS *@
@Html.AntiForgeryToken()
@await Html.PartialAsync("Componentes/Layout/Loading.cshtml")
@await Html.PartialAsync("Componentes/Layout/Modal.cshtml")

@* LIBS JS *@
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"></script>
<script src="https://cdn.datatables.net/v/dt/dt-2.2.1/datatables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-notify@1.0.4/dist/simple-notify.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@* SCRIPTS *@
<script src="~/_LayoutPadraoAssets/Js/Config/avisos.js" asp-append-version="true"></script>
<script src="~/_LayoutPadraoAssets/Js/Config/modal.js" asp-append-version="true"></script>
<script src="~/_LayoutPadraoAssets/Js/Config/tooltips.js" asp-append-version="true"></script>
<script src="~/_LayoutPadraoAssets/Js/Layout/header.js" asp-append-version="true"></script>
<script src="~/_LayoutPadraoAssets/Js/Layout/main.js" asp-append-version="true"></script>
